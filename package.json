{
  "name": "pigyuma",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "TIMING=1 eslint \"./*.{js,jsx,ts,tsx}\" --ignore-path ./.lintignore && turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" --ignore-path .lintignore",
    "test": "turbo run test",
    "postinstall": "husky install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.3.0",
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.2",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "turbo": "latest",
    "typescript": "^4.7.4"
  }
}
