{
  "name": "pigyuma",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "TIMING=1 eslint \"./*.{js,jsx,ts,tsx}\" --ignore-path ./.lintignore && turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" --ignore-path .lintignore",
    "test": "turbo run test",
    "postinstall": "husky install",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@3.3.0",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/cz-commitlint": "^17.3.0",
    "@types/inquirer": "^8",
    "commitizen": "^4.2.5",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.2",
    "inquirer": "8",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "turbo": "latest",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
